
@{
    Layout = null;
}
@model ContactApp_Client.ViewModels.ContactViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/bootstrapcss")
    
    <script src="/Scripts/jquery-1.10.2.js"></script>
    <script src = "/Scripts/bootstrap.js" ></script >
</head>
<body>
    <div class="body-content" >
        <br /><br />
        
        <div class="container" style="width:80% ; align-items:center">
            @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="@Url.Action("Create","Contact")">
            Add new Contact
        </button>*@
            <a href="@Url.Action("Create","Contact")">Add new Contact</a>
            <br /> <br />
            <table cellpadding="2" cellspacing="2" border="1" class="table table-striped table-bordered table-hover table-condensed">
                <tr>
                    <th>Contact Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
                @foreach (var contact in ViewBag.listContacts)
        {
                    <tr>
                        <td>@contact.ContactId</td>
                        <td>@contact.FirstName</td>
                        <td>@contact.LastName</td>
                        <td>@contact.Email</td>
                        <td>@contact.PhoneNumber</td>
                        <td>@contact.Status</td>
                        <td>
                            
                            <a onclick="return confirm('Are you sure ?')" href="@Url.Action("Delete","Contact", new { id = contact.ContactId })">Delete</a>
                            |
                            <a href="@Url.Action("Edit","Contact", new { id = contact.ContactId })">Edit</a>
                        </td>
                    </tr>
        }
            </table>

        </div>
    </div>

</body>
</html>
